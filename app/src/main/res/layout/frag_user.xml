<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
       
       <LinearLayout
           android:layout_weight="1"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <RelativeLayout
               android:layout_marginTop="29dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <View
                   android:id="@+id/view_log_1"
                   android:layout_width="24dp"
                   android:layout_height="0dp"/>


               <ImageView
                   android:layout_toRightOf="@id/view_log_1"
                   android:id="@+id/user_image_log"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@drawable/tx"/>

               <View
                   android:id="@+id/view_log"
                   android:layout_toRightOf="@id/user_image_log"
                   android:layout_width="47dp"
                   android:layout_height="0dp"/>

               <TextView
                   android:layout_centerHorizontal="true"
                   android:layout_centerInParent="true"
                   android:layout_toRightOf="@id/view_log"
                   android:id="@+id/text_view_username"
                   android:text=""
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="30sp"/>

           </RelativeLayout>

       </LinearLayout>

      <LinearLayout
          android:layout_weight="1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">

          <View
              android:layout_marginTop="30dp"
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/colorBj"/>

          <LinearLayout
              android:layout_marginTop="30dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

              <RelativeLayout
                  android:layout_weight="1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">

                  <ImageView
                      android:layout_centerHorizontal="true"
                      android:id="@+id/user_image_zhuti"
                      android:background="@drawable/zhuti"
                      android:layout_width="50dp"
                      android:layout_height="50dp"/>
                  <TextView
                      android:layout_centerHorizontal="true"
                      android:layout_marginTop="10dp"
                      android:layout_below="@id/user_image_zhuti"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="主题"
                      android:textSize="16dp"/>

              </RelativeLayout>
              <RelativeLayout
                  android:layout_weight="1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">

                  <ImageView
                      android:layout_centerHorizontal="true"
                      android:id="@+id/user_image_bizhi"
                      android:background="@drawable/bz"
                      android:layout_width="50dp"
                      android:layout_height="50dp"/>
                  <TextView
                      android:layout_centerHorizontal="true"
                      android:layout_below="@id/user_image_bizhi"
                      android:layout_marginTop="10dp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="壁纸"
                      android:textSize="16dp"/>

              </RelativeLayout>
              <RelativeLayout
                  android:layout_weight="1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">

                  <ImageView
                      android:layout_centerHorizontal="true"
                      android:id="@+id/user_image_dtbz"
                      android:background="@drawable/dtbz"
                      android:layout_width="50dp"
                      android:layout_height="50dp"/>
                  <TextView
                      android:layout_centerHorizontal="true"
                      android:layout_below="@id/user_image_dtbz"
                      android:layout_marginTop="10dp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="动态壁纸"
                      android:textSize="16dp"/>

              </RelativeLayout>
              <RelativeLayout
                  android:layout_weight="1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">

                  <ImageView
                      android:layout_centerHorizontal="true"
                      android:id="@+id/user_image_shoucan"
                      android:background="@drawable/sc"
                      android:layout_width="50dp"
                      android:layout_height="50dp"/>
                  <TextView
                      android:layout_centerHorizontal="true"
                      android:layout_below="@id/user_image_shoucan"
                      android:layout_marginTop="10dp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="收藏"
                      android:textSize="16dp"/>

              </RelativeLayout>
              <RelativeLayout
                  android:layout_weight="1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">

                  <ImageView
                      android:layout_centerHorizontal="true"
                      android:id="@+id/user_image_qita"
                      android:background="@drawable/qita"
                      android:layout_width="50dp"
                      android:layout_height="50dp"/>
                  <TextView
                      android:layout_centerHorizontal="true"
                      android:layout_below="@id/user_image_qita"
                      android:layout_width="wrap_content"
                      android:layout_marginTop="10dp"
                      android:layout_height="wrap_content"
                      android:text="其他"
                      android:textSize="16dp"/>

              </RelativeLayout>

          </LinearLayout>

          <View
              android:layout_marginTop="10dp"
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/colorBj"/>


      </LinearLayout>

      <LinearLayout
          android:layout_weight="2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">

          <LinearLayout
              android:layout_marginTop="10dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

              <View
                  android:layout_width="18dp"
                  android:layout_height="0dp"/>


              <LinearLayout
                  android:layout_weight="1"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

                  <Button
                      android:layout_gravity="center_vertical"
                      android:id="@+id/btn_ll"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:background="@null"
                      android:textSize="18dp"
                      android:text="浏览记录"/>
                  <View
                      android:layout_below="@id/btn_ll"
                      android:layout_width="match_parent"
                      android:layout_height="1dp"
                      android:background="@color/colorBj"/>
                  <Button
                      android:id="@+id/btn_xiazai"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:background="@null"
                      android:layout_gravity="center_vertical"
                      android:textSize="18dp"
                      android:text="我下载的"/>
                  <View
                      android:layout_width="match_parent"
                      android:layout_height="1dp"
                      android:background="@color/colorBj"/>
                  <Button
                      android:id="@+id/btn_zuozhe"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:background="@null"
                      android:layout_gravity="center_vertical"
                      android:textSize="18dp"
                      android:text="关于作者"/>
                  <View
                      android:layout_width="match_parent"
                      android:layout_height="1dp"
                      android:background="@color/colorBj"/>


              </LinearLayout>

              <View
                  android:layout_width="18dp"
                  android:layout_height="0dp"/>


          </LinearLayout>

          <Button
              android:id="@+id/user_btn_break"
              android:layout_marginTop="20dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:text="退出登录"
              android:background="@drawable/login_btn"
              android:textSize="14dp"/>

      </LinearLayout>

   </LinearLayout>

</LinearLayout>

